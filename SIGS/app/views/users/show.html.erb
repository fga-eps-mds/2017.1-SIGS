  <% if permission[:level] != 0 %>
  <a href="/solicitations/index">
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="info-box">
        <span class="info-box-icon bg-yellow"><span class="info-box-icon-padding fa fa-inbox" aria-hidden="true"></span></span>
        <div class="info-box-content">
          <span class="info-box-text">Solicitações Recebidas</span>
          <span class="info-box-number"><%= @solicitation_count.count %></span>
        </div>
        <!-- /.info-box-content -->
      </div>
    </div>
  </a>
  <% end %>
</div><!-- /.row -->

<h2>Calendário</h2>
<div class="row">
  <div class="col-sm-8">
    <table class="table table-hover whiteBackground">
      <thead>
        <tr>
          <th>Período</th>
          <th>Início</th>
          <th>Fim</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th><%=@periods.first.period_type%></th>
          <td><%=@periods.first.initial_date.strftime('%d/%m/%Y')%></td>
          <td><%=@periods.first.final_date.strftime('%d/%m/%Y')%></td>
        </tr>
        <tr>
          <th><%=@periods.second.period_type%> de Alocação</th>
          <td><%=@periods.second.initial_date.strftime('%d/%m/%Y')%></td>
          <td><%=@periods.second.final_date.strftime('%d/%m/%Y')%></td>
        </tr>
        <tr>
          <th><%=@periods.third.period_type%></th>
          <td><%=@periods.third.initial_date.strftime('%d/%m/%Y')%></td>
          <td><%=@periods.third.final_date.strftime('%d/%m/%Y')%></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
