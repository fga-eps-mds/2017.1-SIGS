  <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="info-box">
      <span class="info-box-icon bg-aqua"><i class="info-box-icon-padding fa fa-users" aria-hidden="true"></i></span>

      <div class="info-box-content">
        <span class="info-box-text">Total de Turmas</span>
        <span class="info-box-number"><%=@school_room_count%></span>
      </div>
      <!-- /.info-box-content -->
    </div>
  </div>
  </a>
  <a href="/reports_school_rooms/school_room/">
  <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="info-box">
      <span class="info-box-icon bg-red"><i class="info-box-icon-padding fa fa-stream" aria-hidden="true"></i></span>

      <div class="info-box-content">
        <span class="info-box-text">Turmas Alocadas</span>
        <span class="info-box-number">  <%=@school_rooms_allocated_count%></span>
      </div>
      <!-- /.info-box-content -->
    </div>
  </div>
